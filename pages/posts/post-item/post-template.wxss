.news-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top:1px solid #ededed;
  border-bottom:1px solid #ededed;
  padding-bottom: 5px;
}
.user-info{
  margin:10rpx 0 20rpx 10rpx;
}
.user-avatar{
  width:60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.news-date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}
.news-title{
  font-size: 34rpx;
  font-weight: 600;
  color:#333;
  margin-bottom: 10px;
  margin-left:10px;
}

.news-pic{
  margin-left: 16px;
  width: 100%;
  height: 340rpx;
  margin:auto 0;
  margin-bottom: 15px;
}
.news-content{
  color:#666;
  font-size: 28rpx;
  margin-bottom:20rpx;
  margin-left:20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.news-like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.news-like-image{
  height: 16px;
  width: 16px;
  margin-right:8px;
  vertical-align: middle;
}
.news-count{
  vertical-align: middle;
  margin-right: 20px;
}